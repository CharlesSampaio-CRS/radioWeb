<icecast>
  <limits>
    <clients>100</clients>
    <sources>2</sources>
  </limits>

  <authentication>
    <source-password>Crs@00148601</source-password>
    <admin-user>admin</admin-user>
    <admin-password>Crs@00148601</admin-password>
  </authentication>

  <hostname>0.0.0.0</hostname>

  <listen-socket>
    <port>8000</port>
  </listen-socket>

  <mounts>
    <mount>
      <mount-name>/stream</mount-name>
      <max-listeners>100</max-listeners>
    </mount>
  </mounts>

<paths>
  <logdir>/var/log/icecast2</logdir>
  <webroot>/usr/share/icecast2/web</webroot>
  <adminroot>/usr/share/icecast2/admin</adminroot>
  <pidfile>/var/run/icecast2/icecast.pid</pidfile>
  <alias>
    <source>/</source>
    <destination>/status.xsl</destination>
  </alias>
</paths>

  <fileserve>1</fileserve>
</icecast>
